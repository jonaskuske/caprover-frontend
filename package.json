{
    "name": "app-frontend",
    "version": "0.1.0",
    "private": true,
    "packageManager": "yarn@3.2.4",
    "dependencies": {
        "antd": "^4.24.1",
        "axios": "^1.1.3",
        "classnames": "^2.3.2",
        "deep-equal": "^2.1.0",
        "moment": "^2.29.4",
        "react-css-theme-switcher": "^0.3.0",
        "react-markdown": "^8.0.3",
        "react-redux": "^8.0.5",
        "react-router-dom": "^6.4.3",
        "redux": "^4.2.0",
        "redux-thunk": "^2.4.2",
        "remark-gfm": "^3.0.1",
        "yaml": "^2.1.3"
    },
    "scripts": {
        "formatter": "prettier --check './src/**/*.ts*'",
        "formatter-write": "prettier --write './src/**/*.ts*'",
        "lint": "eslint .",
        "lint-fix": "eslint --fix .",
        "start": "vite dev",
        "build": "vite build",
        "test": "vitest"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "es2022": true,
            "browser": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "prettier"
        ],
        "plugins": [
            "@typescript-eslint"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": "latest",
            "ecmaFeatures": {
                "jsx": true
            }
        },
        "rules": {
            "no-extra-boolean-cast": "off",
            "prefer-const": "off",
            "no-unused-vars": "off",
            "@typescript-eslint/no-unused-vars": [
                "warn",
                {
                    "ignoreRestSiblings": true,
                    "argsIgnorePattern": "^_|(?:e|res|resolve|response|rej|reject|evt|event|cb|callback|err|error|i|idx|v|value|k|key$)"
                }
            ]
        }
    },
    "eslintIgnore": [
        "build"
    ],
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@preact/preset-vite": "^2.4.0",
        "@testing-library/dom": "^8.19.0",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/deep-equal": "^1.0.1",
        "@types/node": "^18.11.9",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "eslint": "^8.27.0",
        "eslint-config-prettier": "^8.5.0",
        "less": "^4.1.3",
        "preact": "^10.11.2",
        "prettier": "^2.7.1",
        "typescript": "^4.8.4",
        "vite": "^3.2.2",
        "vite-plugin-webfont-dl": "^3.4.1",
        "vitest": "^0.24.5"
    }
}
