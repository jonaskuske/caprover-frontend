{
    "name": "app-frontend",
    "version": "0.1.0",
    "private": true,
    "packageManager": "yarn@3.2.4",
    "dependencies": {
        "antd": "^4.16.10",
        "axios": "^0.21.1",
        "classnames": "^2.2.6",
        "deep-equal": "^2.0.5",
        "moment": "^2.29.1",
        "react-css-theme-switcher": "^0.3.0",
        "react-markdown": "^6.0.3",
        "react-redux": "^7.2.2",
        "react-router-dom": "^5.2.0",
        "redux": "^4.0.5",
        "redux-thunk": "^2.3.0",
        "remark-gfm": "^1.0.0",
        "yaml": "^1.10.0"
    },
    "scripts": {
        "formatter": "prettier --check './src/**/*.ts*'",
        "formatter-write": "prettier --write './src/**/*.ts*'",
        "lint": "eslint .",
        "lint-fix": "eslint --fix .",
        "start": "vite dev",
        "build": "vite build",
        "test": "vitest"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "es2022": true,
            "browser": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "prettier"
        ],
        "plugins": [
            "@typescript-eslint"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": "latest",
            "ecmaFeatures": {
                "jsx": true
            }
        },
        "rules": {
            "no-extra-boolean-cast": "off",
            "prefer-const": "off",
            "no-unused-vars": "off",
            "@typescript-eslint/no-unused-vars": [
                "warn",
                {
                    "ignoreRestSiblings": true,
                    "argsIgnorePattern": "^_|(?:e|res|resolve|response|rej|reject|evt|event|cb|callback|err|error|i|idx|v|value|k|key$)"
                }
            ]
        }
    },
    "eslintIgnore": [
        "build"
    ],
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@preact/preset-vite": "^2.4.0",
        "@testing-library/dom": "^8.2.0",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@testing-library/user-event": "^12.1.10",
        "@types/classnames": "^2.2.11",
        "@types/deep-equal": "^1.0.1",
        "@types/node": "^12.0.0",
        "@types/react-redux": "^7.1.16",
        "@types/react-router": "^5.1.11",
        "@types/react-router-dom": "^5.1.7",
        "@types/utf8": "^2.1.6",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "eslint": "^8.27.0",
        "eslint-config-prettier": "^8.5.0",
        "less": "^4.1.3",
        "preact": "^10.11.2",
        "prettier": "^2.7.1",
        "typescript": "^4.1.5",
        "vite": "^3.2.2",
        "vitest": "^0.24.5"
    }
}
